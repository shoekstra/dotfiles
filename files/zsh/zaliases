# Old habits die hard
alias vim="nvim -O"
alias vimdiff="nvim -d"

# Use a coloured ls
alias l="ls"
alias ls="ls --color=auto"

# Git
alias ga="git add"

# Kubernetes
(($+commands[kubectl])) && alias k="kubectl"
(($+commands[kubectx])) && alias kc="kubectx"
(($+commands[kubens])) && alias kns="kubens"
