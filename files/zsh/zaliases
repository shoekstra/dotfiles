# Old habits die hard
alias vim="nvim -O"
alias vimdiff="nvim -d"

# Use a coloured ls
alias dircolors="gdircolors"
alias ls="/usr/local/bin/gls --color"

# Kubernetes
(($+commands[kubectl])) && alias k="kubectl"
(($+commands[kubectx])) && alias kc="kubectx"
(($+commands[kubens])) && alias kns="kubens"
